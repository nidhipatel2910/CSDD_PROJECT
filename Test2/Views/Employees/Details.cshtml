@model Test2.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa; /* Light gray background */
    }

    h1 {
        color: #007bff; /* Blue heading */
        font-size: 2.5rem; /* Large font size */
        margin-bottom: 1.5rem; /* Bottom margin for spacing */
    }

    .card {
        border: none; /* Remove card border */
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15); /* Add shadow */
    }

    .card-body {
        padding: 2rem; /* Padding inside card body */
    }

    .btn-primary {
        background-color: #007bff; /* Blue button */
        border-color: #007bff; /* Blue border */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #0056b3; /* Darker blue border on hover */
        }

    .btn-secondary {
        background-color: #6c757d; /* Gray button */
        border-color: #6c757d; /* Gray border */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker gray on hover */
            border-color: #5a6268; /* Darker gray border on hover */
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center">Employee Details</h1>
            <div class="card mt-4">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-3">Position:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Position)</dd>
                        <dt class="col-sm-3">Age:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>
                        <dt class="col-sm-3">Address:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
                        <dt class="col-sm-3">Shift Timings:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ShiftTimings)</dd>
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                        <dt class="col-sm-3">Invitation Accepted:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.InvitationAccepted)</dd>
                    </dl>
                    <div class="text-center">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
