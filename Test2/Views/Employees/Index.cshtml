@model IEnumerable<Test2.Models.Employee>

@{
    ViewData["Title"] = "Employee Operations";
}

<h1>Employee Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Employee</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Age</th>
                <th>Address</th>
                <th>Shift Timings</th>
                <th>Email</th>
                <th>Invitation Accepted</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td>@item.Age</td>
                    <td>@item.Address</td>
                    <td>@item.ShiftTimings</td>
                    <td>@item.Email</td>
                    <td>@(item.InvitationAccepted ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-responsive {
        overflow-x: auto;
    }

    .table {
        width: 100%;
    }

        .table th,
        .table td {
            vertical-align: middle;
        }

    .btn {
        margin-right: 5px;
    }
</style>
